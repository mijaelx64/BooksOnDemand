@model BooksOnDemand.Models.Book

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd>
            <ul>
                @foreach (var author in Model.Authors)
                {
                    <li>
                        @Html.DisplayFor(model => author)
                    </li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>
    </dl>

    @if (ViewBag.IsDemanded)
    {
        <div class="alert alert-info" role="alert">You Already Demanded This Book.</div>
    }
    else
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @using (Html.BeginForm("Demand", "Books", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
                {
                    <input type="button" value="Demand Book" class="btn btn-default"
                           onclick="location.href='@Url.Action("Demand","Books")?demand=true'" />
                }
            </div>
        </div>
    }

    

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
